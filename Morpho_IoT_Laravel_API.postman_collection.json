		{
			"name": "4. Fetch Device Configuration",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/morpho/device/config?device_id={{device_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"morpho",
						"device",
						"config"
					],
					"query": [
						{
							"key": "device_id",
							"value": "{{device_id}}",
							"description": "Device ID"
						}
					]
				},
				"description": "Fetch device configuration from Morpho API"
			},
			"response": []
		},
