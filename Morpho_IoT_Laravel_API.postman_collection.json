					"mode": "raw",
					"raw": "{\n  \"severity\": \"error\",\n  \"timestamp\": 1762275881,\n  \"hostname\": \"165.51.150.150\",\n  \"application\": \"2.1.4B\",\n  \"device_id\": 7777,\n  \"event_id\": 0,\n  \"message\": \"Minimum threshold exceeded on SDCard Current\",\n  \"context\": {\n    \"last_reading\": -8.81,\n    \"thresholds\": {\n      \"min\": -1,\n      \"max\": 1000,\n      \"max_var\": 250\n    }\n  }\n}"
